generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique // para URLs amigables (ej: "energia", "meditacion")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  posts     Post[]
}

model Post {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique // para URLs amigables
  content      String   @db.Text // HTML generado por Tiptap
  coverImage   String?  // URL de la imagen de portada (opcional)
  excerpt      String?  // Resumen corto para preview (opcional pero recomendado)
  published    Boolean  @default(false) // para tener borradores
  publishedAt  DateTime? // fecha de publicación
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relación con Tag
  tagId        String?
  tag          Tag?     @relation(fields: [tagId], references: [id], onDelete: SetNull)
  
  @@index([tagId])
  @@index([published])
  @@index([publishedAt])
}